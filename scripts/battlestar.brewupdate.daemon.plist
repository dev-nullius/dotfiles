<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" 
"http://www.apple.com/DTDs/PropertyList-1.0.dtd"> 
<plist version="1.0">
  <dict> 
    <key>Label</key>
    <string>battlestar.brewupdate.daemon</string>
    <key>ProgramArguments</key>
    <array>
      <string>brew update; brew cleanup --force</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>ServiceDescription</key>
    <string>Homebrew package manager maintenance</string>
    <key>StartInterval</key>
    <integer>43200</integer>
  </dict>
</plist>
